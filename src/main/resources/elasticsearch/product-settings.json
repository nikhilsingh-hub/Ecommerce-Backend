{
  "index": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "refresh_interval": "1s",
    "max_result_window": 50000
  },
  "analysis": {
    "analyzer": {
      "product_search": {
        "type": "custom",
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "asciifolding",
          "product_synonyms",
          "stop"
        ]
      },
      "product_autocomplete": {
        "type": "custom",
        "tokenizer": "autocomplete_tokenizer",
        "filter": [
          "lowercase",
          "asciifolding"
        ]
      },
      "sku_analyzer": {
        "type": "custom",
        "tokenizer": "keyword",
        "filter": [
          "lowercase",
          "asciifolding"
        ]
      }
    },
    "tokenizer": {
      "autocomplete_tokenizer": {
        "type": "edge_ngram",
        "min_gram": 2,
        "max_gram": 20,
        "token_chars": [
          "letter",
          "digit"
        ]
      }
    },
    "filter": {
      "product_synonyms": {
        "type": "synonym",
        "synonyms": [
          "phone,mobile,smartphone,cell",
          "laptop,computer,notebook",
          "headphones,earphones,earbuds",
          "tv,television",
          "car,automobile,vehicle"
        ]
      }
    }
  }
}
