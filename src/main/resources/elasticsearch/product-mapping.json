{
  "properties": {
    "productId": {
      "type": "long"
    },
    "name": {
      "type": "text",
      "analyzer": "product_search",
      "fields": {
        "keyword": {
          "type": "keyword",
          "ignore_above": 256
        },
        "suggest": {
          "type": "search_as_you_type"
        },
        "autocomplete": {
          "type": "text",
          "analyzer": "product_autocomplete"
        }
      }
    },
    "description": {
      "type": "text",
      "analyzer": "product_search"
    },
    "categories": {
      "type": "keyword"
    },
    "price": {
      "type": "scaled_float",
      "scaling_factor": 100
    },
    "sku": {
      "type": "keyword",
      "fields": {
        "text": {
          "type": "text",
          "analyzer": "sku_analyzer"
        }
      }
    },
    "attributes": {
      "type": "object",
      "dynamic": true,
      "properties": {
        "*": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    },
    "images": {
      "type": "keyword"
    },
    "createdAt": {
      "type": "date",
      "format": "yyyy-MM-dd'T'HH:mm:ss"
    },
    "updatedAt": {
      "type": "date",
      "format": "yyyy-MM-dd'T'HH:mm:ss"
    },
    "clickCount": {
      "type": "long"
    },
    "purchaseCount": {
      "type": "long"
    },
    "popularityScore": {
      "type": "scaled_float",
      "scaling_factor": 100
    },
    "allText": {
      "type": "text",
      "analyzer": "product_search"
    },
    "tags": {
      "type": "keyword"
    },
    "inStock": {
      "type": "boolean"
    },
    "priceRange": {
      "type": "keyword"
    },
    "scoreBoost": {
      "type": "scaled_float",
      "scaling_factor": 100
    }
  }
}
